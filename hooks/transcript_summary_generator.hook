{
    "name": "Transcript Summary Generator",
    "description": "Automatically generates summaries for new transcript files using Groq LLM",
    "trigger": {
      "type": "file",
      "events": ["create", "save"],
      "patterns": [
        "PodiFy/outputs/*transcript*.txt",
        "PodiFy/outputs/*.txt"
      ],
      "exclude": [
        "PodiFy/outputs/*summary*.txt"
      ]
    },
    "action": {
      "type": "agent",
      "request": "A new transcript file has been added: {{file}}\n\nPlease:\n1. Read the transcript content from {{file}}\n2. Use the Groq API with model 'llama-3.1-8b-instant' to generate a concise summary\n3. Save the summary to the same folder with filename ending '_summary.txt'\n4. Use the API key: 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\n5. Make the summary concise for short transcripts (1-3 sentences) and more detailed for longer transcripts\n\nThe summary should be informative and capture the key points of the transcript."
    },
    "settings": {
      "autoRun": true,
      "showInStatusBar": true
    }
  }
  